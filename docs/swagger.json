{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample posts API.",
        "title": "Posts API",
        "contact": {
            "name": "API Support"
        },
        "license": {
            "name": "MIT"
        },
        "version": "1.0"
    },
    "host": "localhost",
    "basePath": "/",
    "paths": {
        "/": {
            "get": {
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Get all posts"
            },
            "post": {
                "description": "Save a new post",
                "produces": [
                    "application/json"
                ],
                "summary": "Save post"
            }
        },
        "/{id}": {
            "get": {
                "description": "Get a post with given ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Get post"
            },
            "put": {
                "description": "Update a post with given ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Update post"
            },
            "delete": {
                "description": "Delete a post with given ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Delete post"
            }
        }
    }
}